<h1>Update Trip</h1>

<form action="/api/trips/<%= trip._id %>" method="POST">
  <label for="destination">Destination:</label>
  <input type="text" id="destination" name="destination" value="<%= trip.destination %>" required>

  <label for="startDate">Start Date:</label>
  <input type="date" id="startDate" name="startDate" value="<%= trip.startDate.toISOString().slice(0, 10) %>" required>

  <label for="endDate">End Date:</label>
  <input type="date" id="endDate" name="endDate" value="<%= trip.endDate.toISOString().slice(0, 10) %>" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description"><%= trip.description %></textarea>

  <label for="budget">Budget:</label>
  <input type="number" id="budget" name="budget" value="<%= trip.budget %>" required>

  <label for="activities">Activities:</label>
  <input type="text" id="activities" name="activities" value="<%= trip.activities.join(', ') %>">

  <input type="hidden" name="_method" value="PUT"> 
  <input type="submit" value="Update Trip">
</form>
